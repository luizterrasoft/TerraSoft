library calculadora01;

uses
  SysUtils,
  Classes;

{$R *.res}

function Adicao(pnA, pnB: integer): integer  export;
begin
  Result := pnA + pnB;
end;

function Subtracao(pnA, pnB: integer): integer; export;
begin
  Result := pnA - pnB;
end;

function Multiplicacao(pnA, pnB: integer): integer; export;
begin
  Result := pnA * pnB;
end;

function Divisao(pnA, pnB: integer): double; export;
begin
  Result := pnA / pnB;
end;                 

exports Adicao;
exports Subtracao;
exports Multiplicacao;
exports Divisao;

begin
end.
 